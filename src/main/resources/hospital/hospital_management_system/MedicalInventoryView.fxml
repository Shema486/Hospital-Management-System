<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="hospital.hospital_management_system.controller.MedicalInventoryController"
      spacing="10" styleClass="page">

    <Label text="Medical Inventory Management" styleClass="section-title"/>

    <!-- Table -->
    <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS" prefHeight="450">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colName" text="Item Name" prefWidth="300"/>
            <TableColumn fx:id="colQuantity" text="Stock Quantity" prefWidth="150"/>
            <TableColumn fx:id="colPrice" text="Unit Price ($)" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Form Section -->
    <GridPane hgap="8" vgap="8" styleClass="form-section">
        <Label text="Item Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-subtitle"/>
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200" prefHeight="28"/>

        <Label text="Stock Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label-subtitle"/>
        <TextField fx:id="txtQuantity" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200" prefHeight="28"/>

        <Label text="Unit Price ($):" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label-subtitle"/>
        <TextField fx:id="txtPrice" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200" prefHeight="28"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="8" alignment="CENTER">
        <Button text="Add" onAction="#addItem" prefWidth="80" prefHeight="28"/>
        <Button text="Update" onAction="#updateItem" prefWidth="80" prefHeight="28" styleClass="btn-secondary"/>
        <Button text="Delete" onAction="#deleteItem" prefWidth="80" prefHeight="28" styleClass="btn-danger"/>
        <Button text="Clear" onAction="#clearFields" prefWidth="80" prefHeight="28" styleClass="btn-ghost"/>
    </HBox>

</VBox>
