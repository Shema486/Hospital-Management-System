<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="hospital.hospital_management_system.controller.MainController"
            prefHeight="800" prefWidth="1400">

    <top>
        <HBox styleClass="header-bar" alignment="CENTER_LEFT" spacing="12">
            <Label text="Hospital Management System" styleClass="header-title"/>
            <Label text="Manage patients, doctors, appointments and more" styleClass="header-subtitle"/>
        </HBox>
    </top>

    <left>
        <VBox styleClass="sidebar">
            <Button text="Patients" onAction="#showPatients" styleClass="nav-button"/>
            <Button text="Doctors" onAction="#showDoctors" styleClass="nav-button"/>
            <Button text="Departments" onAction="#showDepartments" styleClass="nav-button"/>
            <Button text="Appointments" onAction="#showAppointments" styleClass="nav-button"/>
            <Button text="Prescriptions" onAction="#showPrescriptions" styleClass="nav-button"/>
            <Button text="Rx Items" onAction="#showPrescriptionItems" styleClass="nav-button"/>
            <Button text="Feedback" onAction="#showFeedback" styleClass="nav-button"/>
            <Button text="Inventory" onAction="#showInventory" styleClass="nav-button"/>
            <Button text="Reports" onAction="#showReports" styleClass="nav-button"/>
        </VBox>
    </left>

    <center>
        <BorderPane fx:id="mainPane">
            <center>
                <VBox alignment="CENTER" spacing="16" style="-fx-padding: 30;">
                    <Label text="Welcome to Hospital Management System" styleClass="label-title"/>
                    <Label text="Select a module from the left menu to get started" styleClass="label-subtitle"/>

                    <HBox spacing="16" alignment="CENTER">
                        <VBox styleClass="card" alignment="CENTER" spacing="6" prefWidth="200">
                            <Label text="Patient Management" styleClass="card-title"/>
                            <Label text="Register and manage patients" styleClass="card-text" wrapText="true"/>
                        </VBox>
                        <VBox styleClass="card" alignment="CENTER" spacing="6" prefWidth="200">
                            <Label text="Doctor Management" styleClass="card-title"/>
                            <Label text="Manage doctors and specialists" styleClass="card-text" wrapText="true"/>
                        </VBox>
                        <VBox styleClass="card" alignment="CENTER" spacing="6" prefWidth="200">
                            <Label text="Appointments" styleClass="card-title"/>
                            <Label text="Schedule and track appointments" styleClass="card-text" wrapText="true"/>
                        </VBox>
                        <VBox styleClass="card" alignment="CENTER" spacing="6" prefWidth="200">
                            <Label text="Reports" styleClass="card-title"/>
                            <Label text="View patient history and analytics" styleClass="card-text" wrapText="true"/>
                        </VBox>
                    </HBox>
                </VBox>
            </center>
        </BorderPane>
    </center>

    <bottom>
        <HBox styleClass="status-bar" alignment="CENTER" spacing="16">
            <Label text="Hospital Management System v1.0" styleClass="label-subtitle"/>
            <Label text="•" styleClass="label-subtitle"/>
            <Label text="PostgreSQL Database" styleClass="label-subtitle"/>
            <Label text="•" styleClass="label-subtitle"/>
            <Label text="JavaFX Framework" styleClass="label-subtitle"/>
        </HBox>
    </bottom>

</BorderPane>
