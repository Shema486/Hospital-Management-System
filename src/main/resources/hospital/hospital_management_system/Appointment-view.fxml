<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="hospital.hospital_management_system.controller.AppointmentController"
      styleClass="page">

    <Label text="Appointment Management" styleClass="section-title"/>

    <GridPane hgap="10" vgap="10" styleClass="form-section">
        <Label text="Patient:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="patientComboBox" promptText="Select Patient" prefWidth="180" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Doctor:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <ComboBox fx:id="doctorComboBox" promptText="Select Doctor" prefWidth="180" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <DatePicker fx:id="datePicker" prefWidth="180" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Time:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="timeField" promptText="HH:mm" prefWidth="180" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

        <Label text="Reason:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="reasonField" promptText="Reason for appointment" prefWidth="180" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="3"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add" onAction="#handleAdd" prefWidth="80" prefHeight="30"/>
        <Button text="Complete" onAction="#handleComplete" prefWidth="80" prefHeight="30" styleClass="btn-secondary"/>
        <Button text="Cancel" onAction="#handleCancel" prefWidth="80" prefHeight="30" styleClass="btn-secondary"/>
        <Button text="Delete" onAction="#handleDelete" prefWidth="80" prefHeight="30" styleClass="btn-danger"/>
    </HBox>

    <Separator/>

    <!-- Search Section -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="toolbar">
        <Label text="Search:" styleClass="label-subtitle"/>
        <TextField fx:id="searchField" promptText="Enter patient or doctor name..." prefWidth="250"/>
        <Button text="Search" onAction="#handleSearch" prefWidth="80" prefHeight="30"/>
    </HBox>

    <Label text="Appointments" styleClass="label-title"/>
    <TableView fx:id="appointmentTable" VBox.vgrow="ALWAYS" prefHeight="400">
        <columns>
            <TableColumn fx:id="colPatient" text="Patient" prefWidth="180"/>
            <TableColumn fx:id="colDoctor" text="Doctor" prefWidth="180"/>
            <TableColumn fx:id="colDate" text="Date and Time" prefWidth="200"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
            <TableColumn fx:id="colReason" text="Reason" prefWidth="250"/>
        </columns>
    </TableView>
</VBox>
