<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #f4f6f8;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="hospital.hospital_management_system.controller.PatientController">

    <!-- TOP: Search -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-background-color: #2c3e50; -fx-padding: 8;">
            <Label style="-fx-text-fill: white; -fx-font-size: 12px;" text="Search:" />
            <TextField fx:id="txtSearch" promptText="Last name" prefWidth="180" prefHeight="28"/>
            <Button onAction="#searchPatient" text="Search" prefWidth="70" prefHeight="28" style="-fx-background-color: #038cfc; -fx-text-fill: white; -fx-font-size: 11px;"/>
        </HBox>
    </top>

    <!-- CENTER: Table -->
    <center>
        <TableView fx:id="patientTable" VBox.vgrow="ALWAYS" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colFirstName" prefWidth="120" text="First Name" />
                <TableColumn fx:id="colLastName" prefWidth="120" text="Last Name" />
                <TableColumn fx:id="colDob" prefWidth="100" text="DOB" />
                <TableColumn fx:id="colGender" prefWidth="90" text="Gender" />
                <TableColumn fx:id="colContact" prefWidth="120" text="Contact" />
                <TableColumn fx:id="colAddress" prefWidth="180" text="Address" />
            </columns>
        </TableView>
    </center>

    <!-- BOTTOM: Form -->
    <bottom>
        <VBox spacing="8" style="-fx-background-color: white; -fx-padding: 10;">
            <GridPane hgap="8" vgap="8">
                <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 11px;"/>
                <TextField fx:id="txtFirstName" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="150" prefHeight="28"/>

                <Label text="Last Name:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-size: 11px;"/>
                <TextField fx:id="txtLastName" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="150" prefHeight="28"/>

                <Label text="DOB:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 11px;"/>
                <DatePicker fx:id="dpDob" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="150" prefHeight="28"/>

                <Label text="Gender:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-size: 11px;"/>
                <ComboBox fx:id="cbGender" promptText="Select" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="150" prefHeight="28"/>

                <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 11px;"/>
                <TextField fx:id="txtContact" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="150" prefHeight="28"/>

                <Label text="Address:" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-font-size: 11px;"/>
                <TextField fx:id="txtAddress" GridPane.columnIndex="3" GridPane.rowIndex="2" prefWidth="150" prefHeight="28"/>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="8">
                <Button text="Add" onAction="#addPatient" prefWidth="80" prefHeight="28" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-size: 11px;"/>
                <Button text="Update" onAction="#updatePatient" prefWidth="80" prefHeight="28" style="-fx-background-color: #f9a825; -fx-text-fill: white; -fx-font-size: 11px;"/>
                <Button text="Delete" onAction="#deletePatient" prefWidth="80" prefHeight="28" style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-size: 11px;"/>
                <Button text="Clear" onAction="#clearFields" prefWidth="80" prefHeight="28" style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 11px;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>

